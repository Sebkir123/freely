# ======================
# Freely - Environment Configuration
# ======================

# ----------------------
# Application Settings
# ----------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Freely

# ----------------------
# Supabase Configuration
# ----------------------
# Get these from https://supabase.com/dashboard/project/_/settings/api
# Leave empty to use local storage mode (no database required)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ----------------------
# AI Provider Configuration
# ----------------------

# Default provider: openai | anthropic | local
DEFAULT_AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic Configuration
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_BASE_URL=https://api.anthropic.com/v1

# Local LLM Configuration (Ollama, LM Studio, etc.)
LOCAL_LLM_BASE_URL=http://localhost:11434
LOCAL_LLM_MODEL=llama2

# ----------------------
# Security
# ----------------------
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=

# ----------------------
# Features
# ----------------------
# Enable/disable features
ENABLE_REALTIME=true
ENABLE_FILE_UPLOAD=true
ENABLE_CODE_EXECUTION=false
ENABLE_PLUGINS=true

# ----------------------
# Optional: Google Cloud
# ----------------------
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_BUCKET=

# ----------------------
# Optional: Analytics
# ----------------------
NEXT_PUBLIC_GA_ID=

# ----------------------
# Development
# ----------------------
# Set to 'development' for verbose logging
NODE_ENV=development
